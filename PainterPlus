import org.code.neighborhood.*;

public class PainterPlus extends Painter {

    public void turnRight() {
        turnLeft();
        turnLeft();
        turnLeft();
    }

    public void takeAllPaint() {
        while (isOnBucket()) {
            takePaint();
        }
    }

    public void turnAround() {
        turnLeft();
        turnLeft();
    }

    public void moveFast() {
        while (canMove()) {
            move();
        }
    }

    public void paintToEmpty(String color) {
        while (hasPaint()) {
            paint(color);
            if (canMove()) {
                move();
            } else {
                break;
            }
        }
    }

    public void paintDonut(String color) {
        while (hasPaint()) {
            move();
            turnRight();
            paint("white");
            move();
            paint("white");
        }
    }

    public void moveCenter() {
        move();
        move();
        move();
        move();
        move();
        move();
        move();
        move();
        move();
        move();
        move();
        move();
        move();
        move();
      move();
        move();
        
        
    }

    public void outline() {
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        turnLeft();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        turnLeft();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        turnLeft();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        move();
        paint("black");
        turnLeft();
    }
}